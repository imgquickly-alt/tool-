    <script>
        // Add interactivity to tool buttons
        document.addEventListener('DOMContentLoaded', function() {
            const toolButtons = document.querySelectorAll('.tool-btn');
            
            toolButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const toolName = this.getAttribute('data-tool');
                    alert(`Redirecting to ${toolName}...\n\n(This is a demo. In a real application, you would be taken to the tool interface.)`);
                    
                    // Optional: Add visual feedback on click
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });
            
            // Add hover effect for tool cards
            const toolCards = document.querySelectorAll('.tool-card');
            toolCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.zIndex = '10';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.zIndex = '';
                });
            });
            
            // Console log when page loads
            console.log('Multi Tool Hub loaded successfully!');
        });
    </script>
